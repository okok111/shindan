<h1>posts#new</h1>
<%= form_for @post do |f| %>
<div class="field">
    <%= f.label :title %>
    <p><%= f.text_field :title, :size => 20 %></p>
    <%= f.label :image %>
    <p><%= f.file_field :image %></p>
    <%= f.label :contents %>
    <p><%= f.text_field :contents, :size => 20 %></p>
</div>
<div class="check_box">
    <span>タグ</span>
    <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) do |tag| %>
     <div>
       <%= tag.label do %>
         <%= tag.check_box %>
         <%= tag.text %>
       <% end %>
     </div>
   <% end %>
 </div>
<%= f.submit "postする" %>
<% end %>
<%= link_to "post一覧に戻る", posts_path %>
